<h1><%= @event.name %></h1>
<p><strong>Location:</strong> <%= @event.location %></p>
<p><strong>Date:</strong> <%= @event.date %></p>

<% if @event.attendees.any? %>
  <h2>Attendees:</h2>
  <ul>
    <% @event.attendees.each do |attendee| %>
      <li><%= attendee.email %></li>
    <% end %>
  </ul>
<% else %>
  <p>No attendees yet.</p>
<% end %>

<% if user_signed_in? %>
  <% if current_user.attended_events.include?(@event) %>
    <%= link_to 'Cancel Attendance', event_attendance_path(@event), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% else %>
    <%= link_to 'Attend Event', event_attendances_path(event_id: @event.id), method: :post %>
  <% end %>
<% end %>

<%= link_to 'Back', events_path %>